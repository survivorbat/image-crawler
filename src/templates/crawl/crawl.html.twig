{% extends "@app/base.html.twig" %}

{% block content %}
    <main class="row lg">
        <div class="col md-9">
            <h2 class="content__h2">Start crawling!</h2>
            <form action="{{ path('crawl') }}" method="get" class="form__element">
                <label for="url" class="form__label">
                    <input class="form__input" type="url" name="url" placeholder="http://example.com" required/>
                </label>
                <button type="submit" class="form__button">Crawl!</button>
            </form>
        </div>
        <div class="col md-3">
            <h2 class="content__h2">What's this?</h2>
            <p class="content__p">
                This image crawler is a small practice/sandbox project that allows you to fetch all the images from a particular website.
            </p>
        </div>
    </main>
{% endblock %}
